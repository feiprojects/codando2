---
export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div class="container">
  <span class="button">
    <a data-content={title} href={href}></a>
  </span>
</div>

<style lang="scss" scoped>
  .container {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;

  }
  span {
    width: 180px;
    height: 55px;
    display: flex;
    position: relative;
    justify-content: flex-start;
    perspective: 1000px;
  }
  span a {
    font-size: 19px;
    letter-spacing: 1px;
    transform-style: preserve-3d;
    transform: translateZ(-25px);
    transition: transform 0.25s;
  }

  span a:before,
  span a:after {
    position: absolute;
    content: attr(data-content);
    height: 55px;
    width: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 5px solid black;
    box-sizing: border-box;
    border-radius: 5px;
  }
  span a:before {
    color: #fff;
    background: #000;
    transform: rotateY(0deg) translateZ(25px);
  }
  span a:after {
    color: #000;
    transform: rotateX(90deg) translateZ(25px);
  }
  span a:hover {
    transform: translateZ(-25px) rotateX(-90deg);
  }
</style>
